<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/noteOptionsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/note_otions_background"
    app:behavior_peekHeight="40dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/clickableOptionsDragBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="____"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Options"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/optionYellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/note_color_option_yellow"
                app:customColor="@color/white"
                />

            <ImageView
                android:id="@+id/checkedOptionYellow"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/check_icon"
                android:visibility="invisible"
                />


        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/optionBlue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/note_color_option_blue"/>

            <ImageView
                android:id="@+id/checkedOptionBlue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/check_icon"
                android:visibility="invisible"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <View
                android:id="@+id/optionRed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/note_color_option_red"/>

            <ImageView
                android:id="@+id/checkedOptionRed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/check_icon"
                android:visibility="invisible"
                />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a color"
            android:textColor="@color/white"/>


    </LinearLayout>

    <TextView
        android:id="@+id/createdOnTextView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=""
        android:textColor="@color/white"
        />



</LinearLayout>